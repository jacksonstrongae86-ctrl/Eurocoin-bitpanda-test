@model BitpandaExplorer.Models.Wallet.WalletsViewModel
@{
    ViewData["Title"] = "Wallets";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-wallet2"></i> Mis Wallets</h1>
        <p class="text-muted mb-0">Wallets de criptomonedas y fiat</p>
    </div>
    <span class="badge bg-warning text-dark"><i class="bi bi-lock"></i> Requiere API Key</span>
</div>

@if (!Model.HasApiKey)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        API Key no configurada. <a href="/Home/Settings">Configurar ahora</a>
    </div>
}
else if (!Model.IsSuccess)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">€@Model.TotalValueEUR.ToString("N2")</div>
                <div class="stat-label">Valor Total</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">@Model.CryptoWallets.Count</div>
                <div class="stat-label">Wallets Crypto</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-value">@Model.FiatWallets.Count</div>
                <div class="stat-label">Wallets Fiat</div>
            </div>
        </div>
    </div>

    <div class="card bg-dark mb-4">
        <div class="card-header bg-secondary"><i class="bi bi-currency-bitcoin"></i> Crypto Wallets</div>
        <div class="card-body p-0">
            @if (Model.CryptoWallets.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Símbolo</th>
                                <th>Nombre</th>
                                <th class="text-end">Balance</th>
                                <th class="text-end">Valor EUR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var wallet in Model.CryptoWallets)
                            {
                                <tr>
                                    <td><strong>@wallet.Symbol</strong></td>
                                    <td class="text-muted">@wallet.Name</td>
                                    <td class="text-end">@wallet.BalanceFormatted</td>
                                    <td class="text-end text-success">
                                        @if (wallet.ValueEUR.HasValue)
                                        {
                                            <span>€@wallet.ValueEUR.Value.ToString("N2")</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4 mb-0">No hay wallets con balance</p>
            }
        </div>
    </div>

    <div class="card bg-dark">
        <div class="card-header bg-secondary"><i class="bi bi-cash"></i> Fiat Wallets</div>
        <div class="card-body p-0">
            @if (Model.FiatWallets.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Moneda</th>
                                <th>Nombre</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var wallet in Model.FiatWallets)
                            {
                                <tr>
                                    <td><strong>@wallet.Symbol</strong></td>
                                    <td class="text-muted">@wallet.Name</td>
                                    <td class="text-end text-success">@wallet.Balance.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4 mb-0">No hay wallets fiat</p>
            }
        </div>
    </div>
}
