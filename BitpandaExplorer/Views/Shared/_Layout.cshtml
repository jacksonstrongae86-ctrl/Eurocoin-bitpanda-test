@*
    ============================================================================
    LAYOUT PRINCIPAL (_Layout.cshtml)
    ============================================================================
    
    Este archivo define la estructura HTML común para todas las páginas.
    
    RAZOR SYNTAX:
    - @{ } : Bloque de código C#
    - @variable : Imprimir valor
    - @Html.xxx : Helpers de HTML
    - @RenderBody() : Donde se inserta el contenido de cada vista
    - @RenderSection() : Secciones opcionales (ej: scripts específicos)
    
    LAYOUT EN MVC:
    - Las vistas individuales "heredan" este layout
    - Solo escriben su contenido específico
    - El layout provee header, footer, navegación común
    ============================================================================
*@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bitpanda Explorer</title>
    
    @* Bootstrap 5 CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    @* Bootstrap Icons *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    @* Estilos personalizados *@
    <style>
        :root {
            --primary-color: #1a1a2e;
            --secondary-color: #16213e;
            --accent-color: #e94560;
            --text-color: #eaeaea;
            --success-color: #00b894;
            --warning-color: #fdcb6e;
        }
        
        body {
            background-color: #0f0f1a;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        i, .bi {
            color: inherit;
        }
        
        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-bottom: 2px solid var(--accent-color);
        }
        
        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }
        
        .nav-link {
            color: var(--text-color) !important;
            transition: color 0.3s;
        }
        
        .nav-link:hover, .nav-link.active {
            color: var(--accent-color) !important;
        }
        
        .card {
            background: var(--primary-color);
            border: 1px solid #2a2a4a;
            border-radius: 12px;
        }
        
        .card-header {
            background: var(--secondary-color);
            border-bottom: 1px solid #2a2a4a;
            font-weight: 600;
            color: #ffffff;
        }
        
        .card-title {
            color: #ffffff !important;
        }
        
        .card-text {
            color: #ffffff !important;
        }
        
        h1, h2, h3, h4, h5, h6 {
            color: #ffffff !important;
        }
        
        i.bi, .bi {
            color: #ffffff !important;
        }
        
        .nav-link i, .btn i {
            color: inherit !important;
        }
        
        .table {
            color: var(--text-color);
        }
        
        .table thead th {
            background: var(--secondary-color);
            border-color: #2a2a4a;
        }
        
        .table tbody td {
            border-color: #2a2a4a;
        }
        
        .btn-primary {
            background: var(--accent-color);
            border-color: var(--accent-color);
        }
        
        .btn-primary:hover {
            background: #c73e54;
            border-color: #c73e54;
        }
        
        .badge-success {
            background: var(--success-color);
        }
        
        .text-success {
            color: var(--success-color) !important;
        }
        
        .text-danger {
            color: var(--accent-color) !important;
        }
        
        .text-muted {
            color: #b0b0b0 !important;
        }
        
        p, span, div, li, td, th, label, small, .form-label, .form-text, .lead {
            color: #ffffff !important;
        }
        
        .table {
            color: #ffffff !important;
        }
        
        .form-control, .form-select {
            color: #ffffff !important;
        }
        
        .alert {
            color: #ffffff !important;
        }
        
        .list-group-item {
            color: #ffffff !important;
        }
        
        .stat-card {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid #2a2a4a;
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: var(--accent-color);
        }
        
        .stat-label {
            color: #ffffff;
            font-size: 0.9rem;
        }
        
        .card-body {
            color: #ffffff;
        }
        
        strong, b {
            color: #ffffff;
        }
        
        a {
            color: var(--accent-color);
        }
        
        a:hover {
            color: #ff6b81;
        }
        
        .price-up {
            color: var(--success-color);
        }
        
        .price-down {
            color: var(--accent-color);
        }
        
        .footer {
            background: var(--primary-color);
            border-top: 1px solid #2a2a4a;
            padding: 1rem 0;
            margin-top: 2rem;
        }
        
        .alert-info {
            background: #16213e;
            border-color: #2a2a4a;
            color: var(--text-color);
        }
        
        code {
            background: #2a2a4a;
            padding: 2px 6px;
            border-radius: 4px;
            color: #f8f8f2;
        }
        
        pre {
            background: #1a1a2e;
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid #2a2a4a;
        }
        
        pre code {
            background: transparent;
            padding: 0;
        }
    </style>
</head>
<body>
    @* ====== NAVEGACIÓN ====== *@
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-currency-bitcoin"></i> Bitpanda Explorer
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ticker" asp-action="Index">
                            <i class="bi bi-graph-up"></i> Precios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Wallets" asp-action="Index">
                            <i class="bi bi-wallet2"></i> Wallets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trades" asp-action="Index">
                            <i class="bi bi-arrow-left-right"></i> Trades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Transactions" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Transacciones
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Docs">
                            <i class="bi bi-book"></i> Docs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Settings">
                            <i class="bi bi-gear"></i> Config
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* ====== CONTENIDO PRINCIPAL ====== *@
    <main class="container py-4">
        @RenderBody()
    </main>

    @* ====== FOOTER ====== *@
    <footer class="footer text-center">
        <div class="container">
            <p class="mb-0 text-muted">
                <i class="bi bi-code-slash"></i> 
                Bitpanda Explorer - Proyecto educativo de .NET
                <span class="mx-2">|</span>
                <a href="/Home/Docs" class="text-decoration-none">Ver documentación</a>
            </p>
        </div>
    </footer>

    @* ====== SCRIPTS ====== *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Sección para scripts específicos de cada vista *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
