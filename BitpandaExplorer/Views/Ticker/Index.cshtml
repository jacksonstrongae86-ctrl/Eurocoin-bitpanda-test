@model BitpandaExplorer.Models.Ticker.TickerViewModel
@{
    ViewData["Title"] = "Precios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-graph-up"></i> Precios Actuales</h1>
        <p class="text-muted mb-0">
            @Model.TotalAssets activos • Actualizado: <span id="last-update">@Model.LastUpdated.ToString("HH:mm:ss")</span>
            <span id="live-indicator" class="badge bg-success ms-2" style="display:none;">
                <i class="bi bi-broadcast"></i> LIVE
            </span>
        </p>
    </div>
    <span class="badge bg-success"><i class="bi bi-unlock"></i> Público</span>
</div>

@if (!Model.IsSuccess)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
    </div>
}

<div class="card bg-dark mb-4">
    <div class="card-body">
        <form method="get" asp-action="Search" class="row g-3">
            <div class="col-md-9">
                <input type="text" name="symbol" class="form-control bg-dark text-light border-secondary"
                       placeholder="Buscar símbolo (BTC, ETH...)" value="@ViewBag.SearchQuery">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card bg-dark">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th>Símbolo</th>
                        <th class="text-end">EUR</th>
                        <th class="text-end">USD</th>
                        <th class="text-end">CHF</th>
                        <th class="text-end">GBP</th>
                    </tr>
                </thead>
                <tbody id="prices-table">
                    @{ var index = 1; }
                    @foreach (var item in Model.Items)
                    {
                        <tr data-symbol="@item.Symbol">
                            <td class="text-muted">@index</td>
                            <td><strong>@item.Symbol</strong></td>
                            <td class="text-end text-success price-eur">€@item.PriceEUR.ToString("N8")</td>
                            <td class="text-end price-usd">$@item.PriceUSD.ToString("N8")</td>
                            <td class="text-end text-muted">@(item.Prices?.CHF ?? "---")</td>
                            <td class="text-end text-muted">@(item.Prices?.GBP ?? "---")</td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card bg-dark mt-4">
    <div class="card-header bg-secondary"><i class="bi bi-code-slash"></i> Endpoint Info</div>
    <div class="card-body">
        <p><strong>Endpoint:</strong> <code>GET https://api.bitpanda.com/v1/ticker</code></p>
        <p><strong>Auth:</strong> No requerida</p>
        <p><strong>SignalR:</strong> <code>/pricehub</code> (actualizaciones en tiempo real)</p>
        <p class="mb-0"><strong>API JSON:</strong> <a href="/Ticker/Api">/Ticker/Api</a></p>
    </div>
</div>

@section Scripts {
    <script>
        // Esperar a que SignalR esté conectado
        document.addEventListener('DOMContentLoaded', function() {
            var checkHub = setInterval(function() {
                if (window.priceHub && window.priceHub.state === signalR.HubConnectionState.Connected) {
                    clearInterval(checkHub);
                    setupLiveUpdates();
                }
            }, 500);
        });
        
        function setupLiveUpdates() {
            // Mostrar indicador LIVE
            document.getElementById('live-indicator').style.display = 'inline';
            
            // Escuchar actualizaciones de precios
            window.priceHub.on("ReceivePrices", function(prices) {
                updatePricesTable(prices);
            });
            
            console.log('Live updates activos para precios');
        }
        
        function updatePricesTable(prices) {
            prices.forEach(function(price) {
                var row = document.querySelector('tr[data-symbol="' + price.symbol + '"]');
                if (row) {
                    var eurCell = row.querySelector('.price-eur');
                    var usdCell = row.querySelector('.price-usd');
                    
                    if (eurCell && usdCell) {
                        var oldEur = parseFloat(eurCell.textContent.replace(/[€,]/g, ''));
                        var newEur = price.priceEUR;
                        
                        // Actualizar valores
                        eurCell.textContent = '€' + formatNumber(newEur);
                        usdCell.textContent = '$' + formatNumber(price.priceUSD);
                        
                        // Efecto visual de cambio
                        if (newEur > oldEur) {
                            flashCell(eurCell, 'flash-green');
                        } else if (newEur < oldEur) {
                            flashCell(eurCell, 'flash-red');
                        }
                    }
                }
            });
            
            // Actualizar timestamp
            var now = new Date();
            document.getElementById('last-update').textContent = 
                now.toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit', second: '2-digit'});
        }
        
        function formatNumber(num) {
            if (num >= 1) {
                return num.toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2});
            } else {
                return num.toLocaleString('es-ES', {minimumFractionDigits: 8, maximumFractionDigits: 8});
            }
        }
        
        function flashCell(cell, className) {
            cell.classList.add(className);
            setTimeout(function() {
                cell.classList.remove(className);
            }, 500);
        }
    </script>
    
    <style>
        .flash-green {
            animation: flashGreen 0.5s ease-out;
        }
        .flash-red {
            animation: flashRed 0.5s ease-out;
        }
        @@keyframes flashGreen {
            0% { background-color: rgba(0, 184, 148, 0.5); }
            100% { background-color: transparent; }
        }
        @@keyframes flashRed {
            0% { background-color: rgba(233, 69, 96, 0.5); }
            100% { background-color: transparent; }
        }
    </style>
}
