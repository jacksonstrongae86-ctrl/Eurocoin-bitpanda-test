@{
    ViewData["Title"] = "Historial de Precios";
    var assets = ViewBag.PopularAssets as (string Symbol, string Name)[];
}

<div class="mb-4">
    <h1><i class="bi bi-graph-up-arrow"></i> Historial de Precios</h1>
    <p class="text-muted">Selecciona un activo para ver su historial de precios (datos de CoinGecko)</p>
</div>

<div class="card bg-dark mb-4">
    <div class="card-body">
        <form method="get" action="/History/BTC" class="row g-3" id="searchForm">
            <div class="col-md-8">
                <label class="form-label">Buscar por símbolo</label>
                <input type="text" id="symbolInput" class="form-control bg-dark text-light border-secondary"
                       placeholder="Ej: BTC, ETH, SOL..." maxlength="10">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Ver Historial
                </button>
            </div>
        </form>
    </div>
</div>

<h4 class="mb-3"><i class="bi bi-star"></i> Activos Populares</h4>

<div class="row">
    @if (assets != null)
    {
        @foreach (var asset in assets)
        {
            <div class="col-md-3 col-6 mb-3">
                <a href="/History/@asset.Symbol" class="card bg-dark text-decoration-none h-100 asset-card">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-1">@asset.Symbol</h5>
                        <small class="text-muted">@asset.Name</small>
                    </div>
                </a>
            </div>
        }
    }
</div>

<div class="card bg-dark mt-4">
    <div class="card-header bg-secondary">
        <i class="bi bi-info-circle"></i> Información
    </div>
    <div class="card-body">
        <p class="mb-2"><strong>Fuente de datos:</strong> CoinGecko API (gratuita)</p>
        <p class="mb-2"><strong>Períodos disponibles:</strong> 1 día, 7 días, 30 días, 90 días, 1 año</p>
        <p class="mb-0"><strong>Monedas:</strong> EUR, USD</p>
    </div>
</div>

<style>
    .asset-card {
        transition: transform 0.2s, border-color 0.2s;
        border: 1px solid #333;
    }
    .asset-card:hover {
        transform: translateY(-3px);
        border-color: var(--accent-color);
    }
    .asset-card .card-title {
        color: var(--text-color);
    }
</style>

<script>
    document.getElementById('searchForm').addEventListener('submit', function(e) {
        e.preventDefault();
        var symbol = document.getElementById('symbolInput').value.toUpperCase().trim();
        if (symbol) {
            window.location.href = '/History/' + symbol;
        }
    });
</script>
