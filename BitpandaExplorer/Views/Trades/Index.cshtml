@model BitpandaExplorer.Models.Trade.TradesViewModel
@{
    ViewData["Title"] = "Trades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-arrow-left-right"></i> Historial de Trades</h1>
        <p class="text-muted mb-0">@Model.TotalCount trades totales</p>
    </div>
    <span class="badge bg-warning text-dark"><i class="bi bi-lock"></i> Requiere API Key</span>
</div>

@if (!Model.HasApiKey)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        API Key no configurada. <a href="/Home/Settings">Configurar ahora</a>
    </div>
}
else if (!Model.IsSuccess)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
    </div>
}
else
{
    <div class="card bg-dark mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="/Trades" class="btn @(Model.TypeFilter == null ? "btn-primary" : "btn-outline-light")">Todos</a>
                <a href="/Trades/Buys" class="btn @(Model.TypeFilter == "buy" ? "btn-success" : "btn-outline-light")">
                    <i class="bi bi-arrow-down"></i> Compras
                </a>
                <a href="/Trades/Sells" class="btn @(Model.TypeFilter == "sell" ? "btn-danger" : "btn-outline-light")">
                    <i class="bi bi-arrow-up"></i> Ventas
                </a>
            </div>
        </div>
    </div>

    <div class="card bg-dark">
        <div class="card-body p-0">
            @if (Model.Trades.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th class="text-end">Crypto</th>
                                <th class="text-end">Fiat</th>
                                <th class="text-end">Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trade in Model.Trades)
                            {
                                <tr>
                                    <td><small class="text-muted">@trade.Date.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td>
                                        <span class="@trade.TypeColor">
                                            @trade.TypeIcon @trade.Type.ToUpper()
                                        </span>
                                        @if (trade.IsSwap)
                                        {
                                            <span class="badge bg-info ms-1">Swap</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(trade.Status == "finished" ? "bg-success" : "bg-warning")">
                                            @trade.Status
                                        </span>
                                    </td>
                                    <td class="text-end">@trade.CryptoAmount.ToString("N8")</td>
                                    <td class="text-end">€@trade.FiatAmount.ToString("N2")</td>
                                    <td class="text-end text-muted">€@trade.Price.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.HasMorePages)
                {
                    <div class="card-footer text-center">
                        <a href="/Trades?cursor=@Model.NextCursor&type=@Model.TypeFilter" class="btn btn-outline-light">
                            Cargar más <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center py-4 mb-0">No hay trades</p>
            }
        </div>
    </div>
}
